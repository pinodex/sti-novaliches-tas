#!/bin/bash

echo "Preparing deploy..."

rm -rf .git/
rm .gitignore

echo "Creating dotenv file..."

envsubst < .env.travis > .env

echo $TRAVIS_COMMIT > .travis/commit_hash
echo $TRAVIS_BUILD_ID > .travis/build_id

echo -e "Host *\n\tStrictHostKeyChecking no\n" >> ~/.ssh/config

echo "Adding files to deploy"

git init
git config user.name "Travis CI"
git config user.email "travis@stinovaliches"
git config --global push.default simple
git remote add staging ${STAGING_REPO}

{
    git add . 
    git commit -m "Travis CI Build"
} &> /dev/null

echo "Pushing build to staging..."

git push staging master --force

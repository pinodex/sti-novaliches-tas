{% extends '/layouts/dashboard.twig' %}

{% set page_title = 'Profiles' %}
{% set active_menu = 'profiles' %}

{% block subcontent %}
    <div class="columns">
        <div class="column is-12">
            <div class="level is-mobile is-small">
                <div class="level-left"></div>
                <div class="level-right">
                    <form action="{{ app.request.getRequestUri() }}" class="level-item">
                        <div class="field has-addons is-small">
                            <p class="control">
                                <a href="{{ route('admin.profiles.add', {}, false) }}" class="button is-primary is-small">
                                    <i class="fa fa-plus"></i> Add Profile
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <div class="scrollable-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Allocated Days</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in result %}
                            <tr class="is-link">
                                <td>
                                    <a href="{{ route('admin.profiles.edit', { model: item }, false) }}">
                                        {{ item.name }}
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ route('admin.profiles.edit', { model: item }, false) }}">
                                        {{ item.allocated_days }}
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="2">No results found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

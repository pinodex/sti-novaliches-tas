{% extends '/layouts/dashboard.twig' %}

{% form_theme form '/layouts/bulma.twig' %}

{% set page_title = 'Edit User' %}
{% set active_menu = 'users' %}

{% if not model.id %}
    {% set page_title = 'Add User' %}
{% endif %}

{% block subcontent %}
    <div class="columns">
        <div class="column">
            <div class="panel">
                <p class="panel-heading is-small">{{ page_title }}</p>

                <div class="box is-clearfix">
                    <form action="{{ app.request.getRequestUri() }}" method="POST" enctype="multipart/form-data">
                        {{ form_widget(form._token) }}
                        
                        <div class="columns">
                            <div class="column is-4 is-offset-1">
                                {% if model.picture_path %}
                                    <img src="{{ '/storage/' ~ model.picture_path }}" alt="User Avatar" />
                                {% else %}
                                    <img src="/assets/img/default-image.jpg" alt="User Avatar" />
                                {% endif %}

                                {{ form_row(form.picture) }}
                            </div>
                            
                            <div class="column is-6">
                                {{ form_widget(form) }}

                                <p>&nbsp;</p>

                                <div class="field is-grouped is-grouped-right">
                                    {% if model.id %}
                                        <p class="control">
                                            <button class="button is-danger is-outlined" type="button" @click.prevent="modals.confirm = true">
                                                <i class="fa fa-trash"></i> Delete
                                            </button>
                                        </p>
                                    {% endif %}

                                    <p class="control">
                                        <button class="button is-primary" type="submit"><i class="fa fa-floppy-o"></i> Save</button>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <modal :show.sync="modals.confirm">
        <h3 slot="header">Confirm action</h3>
        
        <div slot="body">
            <p>Are you sure you want to delete this user?</p>
        </div>

        <div slot="footer">
            <form method="post" action="{{ route('admin.users.delete', { model: model }, false) }}">
                {{ csrf_field() }}
                    
                <button type="button" class="button is-light" @click="modals.confirm = false">Cancel</button>
                <button type="submit" class="button is-danger"><i class="fa fa-trash-o"></i> Delete User</button>
            </form>
        </div>
    </modal>
{% endblock %}

{% extends '/layouts/dashboard.twig' %}

{% set page_title = 'View request' %}
{% set active_menu = 'requests' %}

{% block subcontent %}
    <div class="columns">
        <div class="column is-12">
            <div class="panel">
                <div class="panel-heading">View request</div>
                <div class="box">
                    <div class="columns">
                        <div class="column">
                            <div class="field">
                                <p>Requestor</p>
                                <h2 class="subtitle">{{ model.requestor ? model.requestor.name : 'N/A' }}</h2>
                            </div>
                        </div>

                        <div class="column">
                            <div class="field">
                                <p>Approver</p>
                                <h2 class="subtitle">{{ model.approver ? model.approver.name : 'N/A' }}</h2>
                            </div>
                        </div>
                    </div>

                    <div class="columns">
                        <div class="column">
                            <div class="field">
                                <p>Type</p>
                                <h2 class="subtitle">{{ model.type }}</h2>
                            </div>
                        </div>

                        <div class="column">
                            <div class="field">
                                <p>Status</p>
                                <h2 class="subtitle">{{ model.status }}</h2>
                            </div>
                        </div>
                    </div>
                    
                    <div class="columns">
                        <div class="column">
                            <div class="field">
                                <p>Submission Date</p>
                                <h2 class="subtitle">{{ model.created_at ? model.created_at|date('M d, Y h:i A') : 'N/A' }}</h2>
                            </div>
                        </div>

                        <div class="column">
                            <div class="field">
                                <p>Inclusive Days</p>
                                <h2 class="subtitle">{{ model.from_date|date('m/d/Y h:i A') ~ ' - ' ~ model.to_date|date('m/d/Y h:i A') }}</h2>
                            </div>
                        </div>

                        <div class="column">
                            <div class="field">
                                <p>Incurred Balance</p>
                                <h2 class="subtitle">{{ model.incurred_balance }}</h2>
                            </div>
                        </div>
                    </div>

                    <div class="columns">
                        <div class="column">
                            <div class="field">
                                <p>Reason</p>
                                <p>{{ model.reason }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

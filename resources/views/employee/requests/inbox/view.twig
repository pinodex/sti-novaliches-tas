{% extends '/layouts/dashboard.twig' %}

{% form_theme form '/layouts/bulma.twig' %}

{% set page_title = 'View request' %}
{% set active_menu = 'inbox' %}

{% block subcontent %}
    <div class="columns">
        <div class="column is-3">
            <div class="card">
                <div class="card-image">
                    <figure class="image">
                        {% if model.requestor and model.requestor.picture_path %}
                            <img src="{{ '/storage/' ~ model.requestor.picture_path }}" alt="User Avatar" />
                        {% else %}
                            <img src="/assets/img/default-image.jpg" alt="User Avatar" />
                        {% endif %}
                    </figure>
                </div>
                            
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">{{ model.requestor.name }}</p>
                            <p class="subtitle is-6">Requestor</p>
                        </div>
                    </div>

                    <div class="content">
                        <div class="info">
                            <p class="title">Department</p>
                            <p class="value">{{ model.requestor.department ? model.requestor.department.name : 'N/A' }}</p>
                        </div>

                        <div class="info">
                            <p class="title">Leaves Balance</p>
                            <p class="value">{{ model.requestor.leaves_balance }}</p>
                        </div>

                        <div class="info">
                            <p class="title">Incurs Balance</p>
                            <p class="value">{{ model.incurred_balance }}</p>
                        </div>

                        <div class="info">
                            <p class="title">Type</p>
                            <p class="value">{{ model.type }}</p>
                        </div>

                        <div class="info">
                            <p class="title">Status</p>
                            <p class="value">{{ model.status }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="column">
            <div class="panel">
                <div class="panel-heading is-small">{{ model.type }} Request</div>
                <div class="box">
                    <div class="columns">
                        <div class="column">
                            <div class="info">
                                <p class="title">Filing Date</p>
                                <p class="value">{{ model.created_at ? model.created_at|date('m/d/Y h:i A') : 'N/A' }}</p>
                            </div>
                        </div>

                        <div class="column">
                            <div class="info">
                                <p class="title">Start Date</p>
                                <p class="value">{{ model.from_date|date('m/d/Y h:i A') }}</p>
                            </div>
                        </div>

                        <div class="column">
                            <div class="info">
                                <p class="title">End Date</p>
                                <p class="value">{{ model.to_date|date('m/d/Y h:i A') }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="columns">
                        <div class="column">
                            <h2 class="subtitle">Reason</h2>

                            <p>{{ model.reason|nl2br }}</p>

                            {% if model.is_approved == '0' %}
                                <hr />
                                <h2 class="subtitle">Disapproval Reason</h2>

                                <p>{{ model.disapproval_reason|nl2br }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {% if model.is_approved is null or model.is_approved == 5 %}
                    <form id="actionForm" action="{{ route('employee.requests.inbox.action', { model: model }, false) }}" method="post" @submit.prevent="modals.confirm = true">
                        {{ form_row(form._token) }}

                        <input type="hidden" name="disapproval_reason" v-model="inbox.disapproval_reason" />

                        <div class="field has-addons">
                            <div class="field-label">
                                <label class="label">Action</label>
                            </div>

                            {{ form_widget(form.action, { attr: { 'v-model' : 'inbox.action' }}) }}

                            <p class="control">
                                <button type="submit" class="button is-primary">Submit</button>
                            </p>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>

    <modal :show.sync="modals.confirm">
        <h3 slot="header">Confirm Action</h3>
        
        <div slot="body">
            <form method="post" class="is-clearfix" @submit.prevent="submitForm('actionForm')">
                <div class="field" v-show="inbox.action == 'disapprove'">
                    <label class="label">Disapproval Reason</label>

                    <p class="control">
                        <textarea class="textarea" v-model="inbox.disapproval_reason" style="height: 100px;" v-bind:required="inbox.action == 'disapprove'"></textarea>
                    </p>
                </div>

                <div class="field">
                    <p v-show="inbox.action == 'escalate'">This will forward the request to your superior.</p>
                    <p v-show="inbox.action == 'approve'">This will approve the request and incur the required balances.</p>
                </div>
                                
                <div class="field is-grouped is-pulled-right">
                    <p class="control">
                        <button type="button" class="button is-light" @click="modals.confirm = false">
                            Cancel
                        </button>
                    </p>

                    <p class="control">
                        <button type="submit" class="button is-primary">
                            <i class="fa fa-chevron-right"></i> Confirm
                        </button>
                    </p>
                </div>
            </form>
        </div>
    </modal>
{% endblock %}

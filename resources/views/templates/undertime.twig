{{ form_row(form._token) }}
{{ form_row(form._requestor) }}
{{ form_row(form._approver) }}

<label style="display: block; margin-bottom: 10px;">Starting date and time</label>

<div class="field has-addons is-fluid">
    {{ form_widget(form.start_date, { attr: { 'v-model': 'request.data.start_date', ':max': 'request.data.end_date' }}) }}
    {{ form_widget(form.start_time, { attr: { 'v-model': 'request.data.start_time' }}) }}
</div>

<label style="display: block; margin-bottom: 10px;">Ending date and time</label>

<div class="field has-addons is-fluid">
    {{ form_widget(form.end_date, { attr: { 'v-model': 'request.data.end_date', ':min': 'request.data.start_date' }}) }}
    {{ form_widget(form.end_time, { attr: { 'v-model': 'request.data.end_time' }}) }}
</div>

<div class="columns">
    <div class="column is-paddingless">
        <div class="field">
            <label class="label">Incurred Balance</label>
            <p class="control">
                <input type="text" class="input" value="0 days" :value="request.incurredBalance" readonly />
            </p>
        </div>
    </div>

    <div class="column is-paddingless">
        <div class="field">
            <label class="label">Leaves Balance</label>
            <p class="control">
                <input type="text" class="input" value="{{ auth_user().leaves_balance }} days" readonly />
            </p>
        </div>
    </div>
</div>

{{ form_row(form.reason) }}

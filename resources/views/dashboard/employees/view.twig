{% extends '/layouts/dashboard.twig' %}

{% set page_title = 'Employees' %}
{% set active_menu = 'employees' %}

{% if trash is defined and trash %}
    {% set page_title = 'Deleted Employees' %}
{% endif %}

{% block subcontent %}
    <div class="columns is-marginless">
        <div class="column">
            <div class="box user-box">
                <div class="columns">
                    <div class="column is-1">
                        <div class="picture">
                            {% if user.thumbnail_path %}
                                <img src="{{ '/storage/' ~ user.thumbnail_path }}" alt="Employee Avatar" />
                            {% else %}
                                <img src="/assets/img/default-thumb.jpg" alt="Employee Avatar" />
                            {% endif %}
                        </div>
                    </div>

                    <div class="column">
                        <div class="columns is-mobile is-marginless">
                            <div class="column">
                                <h1 class="title">{{ user.name }}</h1>
                                <h2 class="subtitle">@{{ user.username }}</h2>
                            </div>

                            {% if user.department %}
                                <div class="column with-divider">
                                    <div class="info">
                                        <p class="title">Department</p>
                                        <p class="value">{{ user.department.name }}</p>
                                    </div>
                                </div>
                            {% endif %}

                            <div class="column is-2">
                                <div class="field has-addons has-addons-right">
                                    <p class="control">
                                        <a href="{{ route('dashboard.employees.edit', { model: user }, false) }}" class="button is-small is-pulled-right" title="Edit Employee">
                                            <i class="fa fa-pencil is-marginless"></i>
                                        </a>
                                    </p>

                                    <p class="control">
                                        <button class="button is-small is-pulled-right" @click="userExtraInfo = !userExtraInfo" title="View Additional Info">
                                            <i class="fa fa-chevron-down is-marginless" v-show="!userExtraInfo"></i>
                                            <i class="fa fa-chevron-up is-marginless" v-show="userExtraInfo"></i>
                                        </button>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="columns has-contents-below" v-show="userExtraInfo">
                            <div class="column">
                                <div class="info">
                                    <p class="title">Last login on</p>
                                    <p class="value">{{ user.last_login_at ? user.last_login_at|date('F d, Y h:i A') : 'None recorded' }}</p>
                                </div>
                            </div>

                            <div class="column">
                                <div class="info">
                                    <p class="title">Created on</p>
                                    <p class="value">{{ user.created_at ? user.created_at|date('F d, Y h:i A') : 'N/A' }}</p>
                                </div>
                            </div>

                            <div class="column">
                                <div class="info">
                                    <p class="title">Updated on</p>
                                    <p class="value">{{ user.updated_at ? user.updated_at|date('F d, Y h:i A') : 'N/A' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns">
        <div class="column is-12">
            <div class="panel">
                <div class="panel-heading is-small">Request History</div>
                <div class="box is-paddingless">
                    <table class="table is-marginless">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Approver</th>
                                <th>Submission Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in user.requests %}
                                <tr class="clickable" @click="location('{{ route('dashboard.requests.view', { model: request }, false) }}')">
                                    <td>{{ request.type ? request.type.name : 'N/A' }}</td>
                                    <td>{{ request.approver ? request.approver.name : 'N/A' }}</td>
                                    <td>{{ request.created_at ? request.created_at|date('M d, Y h:i A') : 'N/A' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">No records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends '/layouts/dashboard.twig' %}

{% set page_title = 'My Requests' %}
{% set active_menu = 'requests.me' %}

{% block subcontent %}
    <div class="columns">
        <div class="column is-12">
            <table class="table is-marginless">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Approver</th>
                        <th>Reason</th>
                        <th>Days</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for request in requests %}
                        <tr class="clickable" @click="location('{{ route('dashboard.requests.view', { model: request }, false) }}')">
                            <td>{{ request.type ? request.type.name : 'N/A' }}</td>
                            <td>{{ request.approver ? request.approver.name : 'N/A' }}</td>
                            <td>{{ request.reason[0:20] ~ '...' }}</td>
                            <td>{{ request.days }}</td>
                            <td>{{ request.status }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

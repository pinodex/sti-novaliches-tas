{% extends '/layouts/dashboard.twig' %}

{% form_theme form '/layouts/bulma.twig' %}

{% set page_title = 'Edit Group' %}
{% set active_menu = 'groups' %}

{% if not model.id %}
    {% set page_title = 'Add Group' %}
    {% set active_menu = 'groups.add' %}
{% endif %} 

{% block subcontent %}
    <div class="columns">
        <div class="column is-4 is-offset-4">
            <div class="panel">
                <p class="panel-heading is-small">{{ page_title }}</p>

                <div class="box is-clearfix">
                    <form action="{{ app.request.getRequestUri() }}" method="POST">
                        {{ form_widget(form) }}

                        <div class="field is-grouped is-grouped-right">
                            {% if model.id %}
                                <p class="control">
                                    <button class="button is-danger is-outlined" @click.prevent="modals.confirm = true">
                                        <i class="fa fa-trash"></i> Delete
                                    </button>
                                </p>
                            {% endif %}

                            <p class="control">
                                <button class="button is-primary" type="submit"><i class="fa fa-floppy-o"></i> Save</button>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <modal :show.sync="modals.confirm">
        <h3 slot="header">Confirm action</h3>
        
        <div slot="body">
            <p>Are you sure you want to delete this group?</p>
        </div>

        <div slot="footer">
            <form method="post" action="{{ route('dashboard.groups.delete', { model: model }, false) }}">
                {{ csrf_field() }}
                    
                <button type="button" class="button is-light" @click="modals.confirm = false">Cancel</button>
                <button type="submit" class="button is-danger"><i class="fa fa-trash-o"></i> Delete User</button>
            </form>
        </div>
    </modal>
{% endblock %}

{% extends '/layouts/main.twig' %}

{% form_theme form '/layouts/bulma.twig' %}

{% set body_class = 'login-page' %}
{% set page_title = 'Reset Password' %}

{% block content %}
    <section class="hero is-medium">
        <div class="hero-body">
            <div class="container">
                <div class="columns login-container">
                    <div class="column is-offset-1 is-one-third is-clearfix">
                        <div class="login-logo is-hidden-touch is-pulled-right"></div>
                        <div class="login-logo is-hidden-desktop "></div>
                    </div>

                    <div class="column is-one-third">
                        <h1 class="title">Reset Password</h1>
                        <h2 class="subtitle">{{ user.first_name }} {{ user.last_name }}</h2>

                        {% if session_get('message') %}
                            <div class="notification is-{{ session_get('message')[0] }} is-small">
                                {{ session_get('message')[1] }}
                            </div>
                        {% endif %}

                        <form action="{{ app.request.getRequestUri() }}" method="POST">
                            {{ form_widget(form) }}

                            <div class="field">
                                <button class="button is-primary is-pulled-right">
                                    Reset Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
